Package: MortalityEstimate
Type: Package
Title: Indirect Estimation Methods for Measurement of Demographic Indicators
Version: 0.9.13
Authors@R: c(
  person("Marius D.", "Pascariu", role = c("aut", "cre", "cph"), email = "rpascariu@outlook.com", comment = c(ORCID = "0000-0002-2568-6489")),
